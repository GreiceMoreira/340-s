<% if (title) { %>
    <h1><%= title %></h1>
<% } else { res.redirect('/')} %>

<%- messages() %>

<% if(errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
        <%   }) %>
    </ul>
<% } %> 

<form action="" method="post" novalidate>
    <legend>Field is required</legend>

    <!-- Classification name  -->
    <label for="classification_name">Classification Name </label>
    <input type="text" id="classification_name" name="classification_name" required title="Enter a New Classification"
    placeholder="Enter" value="<%= locals.classification_name %>">
    <p>NAME MUST BE ALPHABETIC CHARACTERS ONLY (no spaces or special characters)</p>

    <button id="AddClassification" type="submit">Add Classification</button>
</form>